{
    "manifest_version": 3,
    "name": "API Modifier",
    "version": "1.0",
    "description": "API Response Modifier",
    "permissions": [
      "scripting",
      "webRequest",
      "activeTab",
      "webRequestBlocking"
    ],
    "host_permissions": [
      "*://*.kryzetech.com/*",
      "https://partitionwala.kryzetech.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["*://*.kryzetech.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
  }